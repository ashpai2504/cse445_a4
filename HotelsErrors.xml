<?xml version="1.0" encoding="utf-8"?>
<!-- 1) Wrong root element: <Hotel> instead of <Hotels> -->
<Hotel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="Hotels.xsd">
  
  <!-- A correct hotel (just to show comparison) -->
  <Hotel Rating="4.2">
    <Name>Westin</Name>
    <Phone>480-968-8885</Phone>
    <Phone>800-937-8461</Phone>
    <!-- 2) We'll keep NearestAirport to show some addresses can have it. -->
    <Address NearestAirport="Sky Harbor">
      <Number>11</Number>
      <Street>E 7th St</Street>
      <City>Tempe</City>
      <State>AZ</State>
      <Zip>85281</Zip>
    </Address>
  </Hotel>
  
  <!-- 2) Missing required "Rating" attribute -->
  <Hotel>
    <Name>Marriott Phoenix Resort Tempe</Name>
    <Phone>480-894-1400</Phone>
    <Address NearestAirport="Sky Harbor">
      <Number>300</Number>
      <Street>S Mill Ave</Street>
      <City>Tempe</City>
      <State>AZ</State>
      <Zip>85281</Zip>
    </Address>
  </Hotel>
  
  <!-- 3) Missing a <Phone> element entirely -->
  <Hotel Rating="4.0">
    <Name>Hyatt Regency Phoenix</Name>
    <!-- No <Phone> here -->
    <Address>
      <Number>122</Number>
      <Street>N 2nd St</Street>
      <City>Phoenix</City>
      <State>AZ</State>
      <Zip>85004</Zip>
    </Address>
  </Hotel>
  
  <!-- 4) Unclosed <Address> element -->
  <Hotel Rating="3.8">
    <Name>AC Hotel Phoenix Tempe</Name>
    <Phone>480-642-6140</Phone>
    <Address NearestAirport="Sky Harbor">
      <Number>100</Number>
      <Street>E Rio Salado Pkwy</Street>
      <City>Tempe</City>
      <State>AZ</State>
      <Zip>85281</Zip>
    <!-- MISSING </Address> -->
  </Hotel>
  
  <!-- 5) Two <Name> elements in one hotel -->
  <Hotel Rating="4.1">
    <Name>Graduate Tempe</Name>
    <Name>Second Name Not Allowed</Name>
    <Phone>480-967-9431</Phone>
    <Address>
      <Number>225</Number>
      <Street>E Apache Blvd</Street>
      <City>Tempe</City>
      <State>AZ</State>
      <Zip>85281</Zip>
    </Address>
  </Hotel>
  
</Hotel>
